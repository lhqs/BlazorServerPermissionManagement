@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" class="bg-gray-50" data-nosnippet>
    <div id="app">
        <div class="flex flex-col items-center justify-center min-h-screen">
            <div class="animate-spin rounded-full h-16 w-16 border-t-2 border-b-2 border-blue-500 mb-4"></div>
            <div class="text-gray-600 text-lg font-medium">正在加载应用...</div>
        </div>
    </div>

    <div id="blazor-error-ui" class="fixed bottom-0 w-full bg-red-100 text-red-800 p-4 hidden">
        <div class="container mx-auto flex items-center justify-center">
            <span>发生了一个未处理的错误</span>
            <a href="" class="reload mx-2 text-blue-600 hover:text-blue-800 font-medium">重新加载</a>
            <a class="dismiss ml-2 cursor-pointer hover:text-red-900">✕</a>
        </div>
    </div>
</div>
