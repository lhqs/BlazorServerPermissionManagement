@page "/"
@rendermode InteractiveServer
@using ManagerSystem.Models.Auth
@using ManagerSystem.Services.Auth
@inject IAuthService AuthService

<PageTitle>Home</PageTitle>
<ManagerSystem.Components.Auth.AuthorizeView Resource="/" PermissionType="PermissionType.Page">

    <ManagerSystem.Components.Auth.AuthorizeView Resource="CustomerData" PermissionType="PermissionType.Data">
        <ChildContent>
            <div class="p-4 bg-green-100 border border-green-400 rounded">
                您有权限访问客户数据。
            </div>
        </ChildContent>
        <UnauthorizedContent>
            <div class="p-4 bg-red-100 border border-red-400 rounded">
                您没有权限访问客户数据。
            </div>
        </UnauthorizedContent>
    </ManagerSystem.Components.Auth.AuthorizeView>
</ManagerSystem.Components.Auth.AuthorizeView>